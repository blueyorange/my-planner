{% set title="questions" %}
{% extends "base.njk" %}
{% block content %}
    {% include "header.njk" %}
    <div class="container">
        <div class="row mt-3">
            <div class="d-flex justify-content-around">
                <a href="/questions/edit/{{ q._id }}" class="btn btn-primary" role="button">Edit</a>
                <a class="btn btn-primary" role="button">Live poll</a>
            </div>
        </div>
        <div class="row">
            <div class="question">
                <p>{{ q.body | safe }}</p>
            </div>
        </div>
    </div>
    <style>
        .question img {
            width: 100%;
            height: auto;
        }
    </style>
{% endblock %}