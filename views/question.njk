{% set title="questions" %}
{% extends "base.njk" %}
{% block content %}
    {% include "header.njk" %}
    <div class="container mt-3">
        <div class="row mt-3">
            {% include 'messages.njk' %}
        </div>
        <div class="row mt-3">
            <div class="d-flex justify-content-around">
                <a href="/questions/{{ q.id }}/edit" class="btn btn-primary" role="button">Edit</a>
                <a href="/questions/{{ q.id }}/delete" class="btn btn-danger" role="button">Delete</a>
                <a href="/questions/{{ q.id }}/poll" class="btn btn-primary" role="button">Live poll</a>
            </div>
        </div>
        <div class="row">
            <div class="question">
                <p>{{ parse(q.body) | safe }}</p>
            </div>
        </div>
    </div>
{% endblock %}