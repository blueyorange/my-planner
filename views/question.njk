{% set title="questions" %}
{% extends "base.njk" %}
{% block content %}
    {% include "header.njk" %}
    <div class="container mt-3">
        <div class="row mt-3">
            <div class="d-flex justify-content-around">
                <a href="/questions/{{ q.id }}/edit" class="btn btn-primary" role="button">Edit</a>
                <a class="btn btn-primary" role="button">Live poll</a>
            </div>
        </div>
        <div class="row">
            <div class="question">
                <p>{{ parse(q.body) | safe }}</p>
            </div>
        </div>
    </div>
{% endblock %}